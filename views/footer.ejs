
<div class="extra">
    <div class="rules" onclick="displayRules(true)">
        RULES
    </div>

    <div class="rules" onclick="resetScore()">
        RESET SCORE
    </div>
</div>

<div class="dimScreen" id="dimScreen">

    <div class="rulesDetails">
        
        <div class="rulesTitle">
            <div class="titleText">RULES</div>
            <img onclick="displayRules(false)" class="close" src="/close.png"/>
        </div>

        <div class="rulesDiagram">
            
            <div class="row1">
                <div class="rulesOption">
                    <img src="/paper.png"/>
                </div>

                <div class="colArrow">
                    <div class="arrowText">BEATS</div>
                    <img class="arrow1" src="/right.png"/>
                </div>
                <div class="rulesOption">
                    <img src="/rock.png"/>
                </div>
            </div>

            <div class="row2">

                <div class="rowArrow">
                    <div class="arrowText">BEATS</div>
                    <img class="arrow" src="/downright.png"/>
                </div>
                
                <div class="rowArrow">
                    <img class="arrow" src="/downleft.png"/>
                    <div class="arrowText">BEATS</div>
                </div>

            </div>

            <div class="row1">
                <div class="rulesOption">
                    <img src="/scissors.png"/>
                </div>
            </div>

        </div>
        <img onclick="displayRules(false)" class="close1" src="/close.png"/>
    </div>

</div>

</body>

<script>
    const displayRules=(bool)=>{
        if(bool){
            document.getElementById("dimScreen").style.display="flex";
        }
        else{
            document.getElementById("dimScreen").style.display="none";
        }
    }

    const resetScore = async () =>{
        const url="/resetscore";
        const options={
            method:"POST",
            body:JSON.stringify({}),
            headers:{'Content-Type':"application/json"},
        };
        const res = await fetch(url,options);
        const data = await res.json();
        document.getElementById("score").innerText=data['score'];
    }

</script>

</html>